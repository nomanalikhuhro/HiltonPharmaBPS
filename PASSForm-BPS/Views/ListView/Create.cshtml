    <div style="padding-top: 15px;">

        <div style="border: 2px solid; background-color: white; border-radius: 10px; border-color: white; box-shadow: 1px 0px 9px 1px lightgray;">
            <div style="padding-top: 15px;">


                @if(Model == null)
                {
                    <div style="padding-top: 15px; padding-left: 20px;">
                        <div class="conatiner">
                            <div class="row">
                                <div class="col-4">
                                    <form asp-controller="ListView" asp-action="Create" style="padding-left:12px;">
                                        <label style="font-weight:bold;">Tracking ID:</label>
                                        <div>
                                            <input  type="text" name="inputValue" />
                                            <button class="trackbtn" type="submit">Next</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-4">
                                    <label style="font-weight:bold;">Area:</label>
                                    <div>
                                        <input type="text" />
                                    </div>

                                </div>
                                <div class="col-4">
                                    <label style="font-weight:bold;">Distributor:</label>
                                    <div>

                                      @*  <select style="width: 70%; height: 30px;">*@
                                        <input type="text" style="width:90%" />
                                      @*  </select>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div style="padding-top:15px">
                            <div class="container">
                                <div class="row">
                                    <div class="col-4">
                                        <label style="font-weight:bold;">Territory Code:</label>
                                        <div>
                                            <input type="text" />
                                        </div>
                                    </div>
